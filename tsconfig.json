    "watch": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*"
      ]
    },
    "lib": [
      "es6",
      "dom"
    ]
  },
  "include": [
    "src/**/*",
    "node_modules/@types/p5/global.d.ts"
  ]
}