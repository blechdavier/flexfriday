{
	"compilerOptions": {
		"watch": true,
		"module": "commonjs",
		"esModuleInterop": true,
		"target": "ES6",
		"noImplicitAny": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"strictNullChecks": true,
		"sourceMap": true,
		"strict": true,
		"outDir": "../build",
		"lib": ["es6", "dom"]
	},
	"include": ["./**/*", "../global/**/*"]
}
